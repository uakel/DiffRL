Bootstrap: docker
From: ubuntu

%post
    set -e
    apt-get update
    apt-get install -y libegl1 libgl1 libgles2
    apt-get install -y curl
    apt-get install -y python3-pyqt5
    curl -LsSf https://astral.sh/uv/install.sh | sh
    export PATH="$PATH:$HOME/.local/bin"
    apt-get clean
    uv cache clean

%environment
    export PATH="$PATH:/root/.local/bin"

%runscript
    export PATH="$PATH:/root/.local/bin"
    uv run "$@"
